{
  "compilerOptions": {
    "target": "es2017",                                      
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "baseUrl": "./",                                  
    "paths": {
      "@controllers" :[".src/controllers/*"]
    },                                      
    "typeRoots": ["./src/@types", "./node_modules/@types"],                                  
    "allowJs": true,                                    
    "outDir": "./dist",                                   
    "removeComments": true,                               
    "esModuleInterop": true,                                 
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                          
    "skipLibCheck": true                                 
  },
  "include": [
    "./src/**/*"
  ]
}
