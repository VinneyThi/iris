{
  "compilerOptions": {
    "target": "ES2017",                                      
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "baseUrl": "./",                                  
    "paths": {
      "@utils/*" :["./src/utils/*"],
      "@interfaces/*" :["./src/interfaces/*"]
    },                                      
    "typeRoots": ["./src/@types", "./node_modules/@types"],                                  
    "allowJs": true,                                    
    "outDir": "./dist",                                   
    "removeComments": true,                               
    "esModuleInterop": true,                                 
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                          
    "skipLibCheck": true ,
    "downlevelIteration": true,
    "importHelpers": true,                                
  },
  "include": [
    "./src/**/*"
  ]
}
